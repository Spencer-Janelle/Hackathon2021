{
  "name": "Misinformation Scanner",
  "description": "Scanner to flag misinformation!",
  "version": "1.0",
  "manifest_version": 3,
  //"background": {
  //  "service_worker": "background.js"
  //},
  "permissions": [ "storage", "activeTab", "scripting" ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "css": ["contentscript.css"],
      "js": [ "scanner.js" ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/Honey logo.png",
      "32": "/images/Honey logo.png",
      "48": "/images/Honey logo.png",
      "128": "/images/Honey logo.png"
    }
  },
  "icons": {
    "16": "/images/Honey logo.png",
    "32": "/images/Honey logo.png",
    "48": "/images/Honey logo.png",
    "128": "/images/Honey logo.png"
  },
  "options_page": "options.html"
}
